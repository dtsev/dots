#!/bin/sh

# user@hostname
# -------------
# OS:        Linux
# KERNEL:    Linux 6.9
# UPTIME:    4 hours, 20 minutes
# PACKAGES:  666
# SHELL:     sh
# WM:        wm
# TERMINAL:  tty

# File:         info.textart
# Description:  Info template to customize and fetch
# Author:       NNB
#               ‚îî‚îÄ https://github.com/NNBnh
# URL:          https://github.com/NNBnh/textart-collections/blob/main/fetch/info.textart


# Values
COLOR="${1:-97}"
USER="$USER"
HOSTNAME=$(hostname)
OS=$(lsb_release -sd | sed -e 's/"//g')
SEPARATOR=$(echo "${USER:-user}@${HOSTNAME:-hostname}" | sed -e 's/./-/g')
KERNEL=$(uname -sr)
UPTIME=$(uptime -p | sed -e 's/up //')
PACKAGES="$PACKAGES"
SHELL=$(basename "$SHELL")
WM="$XDG_CURRENT_DESKTOP"
TERMINAL=$(basename "$TERM")

# It's highly recommend to used with Fetchutils:
# 	"A collection of small scripts to retrieve system information"
#
# URL:  https://github.com/lptstr/fetchutils


# Start
printf "\033[1;${COLOR}m${USER:-user}\033[0m@\033[1;${COLOR}m${HOSTNAME:-hostname}\033[0m
\033[0m${SEPARATOR:----}\033[0m
\033[1;${COLOR}müç°OS:        \033[0m${OS:-os}\033[0m
\033[1;${COLOR}m‚öôÔ∏èKERNEL:    \033[0m${KERNEL:-kernel}\033[0m
\033[1;${COLOR}m‚è±Ô∏èUPTIME:    \033[0m${UPTIME:-uptime}\033[0m
\033[1;${COLOR}müì¶PACKAGES:  \033[0m${PACKAGES:-packages}\033[0m
\033[1;${COLOR}müêöSHELL:     \033[0m${SHELL:-shell}\033[0m
\033[1;${COLOR}mü™üWM:        \033[0m${WM:-wm}\033[0m
\033[1;${COLOR}müïπÔ∏èTERMINAL:  \033[0m${TERMINAL:-terminal}\033[0m"


exit 0
